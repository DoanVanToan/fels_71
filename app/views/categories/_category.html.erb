<div class="row">
  <div class="col-md-8 category">
    <div class="list-group">
      <div class="list-group-item list-group-item-success">
        <h3 class="list-group-item-heading">
          <%= category.name %>
        </h3>
        <span>
          <%= t "user.learned" %>
          <%= category.words.learned(current_user).count %>
          <%= t "per" %>
          <%= category.words.get_all(current_user).count %>
        </span>
        <p class="list-group-item-text">
          <%= category.description %>
        </p>
      </div>
      <span class="col-md-1">
        <%= link_to t("categories.start"), category_path(category),
          class: "btn btn-primary start-button" %>
      </span>
    </div>
  </div>
</div>
