<div class="list-group">
  <div class="list-group-item list-group-item-success">
    <h3 class="list-group-item-heading">
      <div class="col-md-6 text-warning"><%= category.name %></div>
      <div class="col-md-6">
        <%= link_to t("categories.enter"), category_path(category),
          class: "btn btn-primary pull-right" %>
      </div>
    </h3>
    <h4 class="text-danger">
      <%= t "user.learned" %>
      <%= category.words.learned(current_user).count %>
      <%= t "per" %>
      <%= category.words.get_all(current_user).count %>
    </h4>
    <p class="list-group-item-text">
      <%= category.description.truncate(100) %>
    </p>
  </div>
</div>
