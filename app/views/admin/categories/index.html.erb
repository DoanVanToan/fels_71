<% provide :title, t("Categories") %>

<h1><%= t "Categories" %></h1>
<div class="col-sm-3 col-md-12">
  <%= link_to "Add new Course", new_admin_category_path, class: "btn btn-lg btn-primary" %>
  <%= will_paginate %>
  <ul class="list-group">
    <% @categories.each do |category| %>
      <li class="list-group-item list-group-item-info">
        <b><%= link_to category.name, admin_category_path(category) %></b> </br>
        <%= t "Created" %> <%= time_ago_in_words(category.created_at) %> <%= t "ago." %>
        <%= link_to "Details", admin_category_path(category),
          class: "btn btn-xs btn-info" %> |
        <%= link_to "Delete", admin_category_path(category),
          class: "btn btn-xs btn-warning",
          method: :delete, data: {confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>
  <%= will_paginate %>
</div>

<div class="clear"></div>
