<% provide :title, t("user.EditUser") %>

<h1><%= t "user.EditUser" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @user], html: {multipart: true} do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password %>
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t("Confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <br>
      <% unless @user.avatar.blank? %>
        <%= image_tag @user.avatar %>
      <% else %>
        <%= image_tag "avatar_default.jpg" %>
      <% end %>
      <span class="picture">
        <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png" %>
      </span>
      <br>
      <%= f.submit t("Update"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="clear"></div>
