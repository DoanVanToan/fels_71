<% provide :title, t("static_page.home") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <% unless current_user.avatar.blank? %>
          <%= link_to image_tag(current_user.avatar, id: "image"), current_user %>
        <% else %>
          <%= link_to image_tag("avatar_default.jpg", id: "image"), current_user %>
        <% end %>
      </section>
      <section class="name">
        <p><%= link_to current_user.name, current_user %></p>
        <p><%= t "user.numberwordlearn", word: @words.count %></p>
      </section>
      <section class="stats">
      <%= render "shared/stats" %>
      </section>
    </aside>
    <div class="col-md-9">
      <div class="col-md-6 col-md-offset-2">
        <%= link_to t("word.wordall"), words_path, class: "action-button shadow animate blue" %>
        <%= link_to t("categories.lessons"), root_path, class: "action-button shadow animate red" %>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div id="activities">
            <ul class="list-group">
              <li class="list-group-item active"><%= t "user.activities" %></li>
              <%= render @activities %>
            </ul>
          </div>
          <%= will_paginate @activities %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_page.fels" %></h1>
    <p>
      <%= t "static_page.intro" %>
      <a href="http://www.railstutorial.org/"><%= t "static_page.fels" %></a>
      <%= t "static_page.app" %>.
    </p>
  </div>
<% end %>
