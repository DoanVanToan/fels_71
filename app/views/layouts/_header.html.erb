<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <ul class="nav navbar-nav navbar-left">
      <% if logged_in? %>
        <% if current_user.admin? %>
          <li><%= link_to t("static_page.logo"), admin_root_path, id: "logo" %></li>
          <li><%= link_to t("user.title.index"), admin_users_path %></li>
          <li><%= link_to t("Categories"), admin_categories_path %></li>
          <li><%= link_to t("word.WordList"), admin_words_path %></li>
        <% else %>
          <li><%= link_to t("static_page.logo"), root_path, id: "logo" %></li>
          <li><%= link_to t("word.WordList"), words_path %></li>
        <% end %>
      <% end %>
    </ul>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li>
            <% unless current_user.avatar.blank? %>
              <%= link_to image_tag(current_user.avatar, id: "avatar"), current_user %>
            <% else %>
              <%= link_to image_tag("avatar_default.jpg", id: "avatar"), current_user %>
            <% end %>
          </li>
          <li><%= link_to current_user.name, user_path(current_user) %></li>
          <li class = "dropdown">
            <a href = "#" class = "dropdown-toggle" data-toggle = "dropdown"><%= t("user.account") %>
             <b class = "caret"></b>
            </a>
            <ul class = "dropdown-menu">
              <% if current_user.admin? %>
                <li><%= link_to t("user.profile"), admin_user_path(current_user) %></li>
                <li><%= link_to t("user.setting"), edit_admin_user_path(current_user) %></li>
              <% else %>
                <li><%= link_to t("user.profile"), user_path(current_user) %></li>
                <li><%= link_to t("user.setting"), edit_user_path(current_user) %></li>
              <% end %>
              <li><%= link_to t("static_page.help"), help_path %></li>
              <li>
                <%= link_to t("user.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
