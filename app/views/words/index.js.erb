$("#word_table #table-list").append("<%= j render @words %>");
<% if @words.next_page %>
  $(".pagination").replaceWith("<%= j will_paginate @words %>");
<% else %>
  $(".pagination").remove();
<% end %>
$("#word_table").html("<%= j render 'words_table' %>");
$("#words").html("<%= @words.any? ? pluralize(@words.count, 'word') : t('word.zero') %>");
$("#download").html("<%= escape_javascript(render 'shared/download') %>");
